<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Configurations>Debug;Release;UnityDebug;Unity;DebugExamples</Configurations>

		<Version>$(VersionSuffix)</Version>
		<Authors>Relife87</Authors>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<PackageId>$(MSBuildProjectName)_Debug</PackageId>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='DebugExamples'">
		<PackageId>$(MSBuildProjectName)_Debug</PackageId>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='UnityDebug'">
		<AssemblyName>Unity.$(MSBuildProjectName)</AssemblyName>
		<TargetFramework>netstandard2.1</TargetFramework>
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Unity'">
		<AssemblyName>Unity.$(MSBuildProjectName)</AssemblyName>
		<TargetFramework>netstandard2.1</TargetFramework>
	</PropertyGroup>

	<ItemGroup Condition="'$(Configuration)'!='UnityDebug' and '$(Configuration)'!='Unity'">
		<PackageReference Include="NSL.BuilderExtensions.SocketCore" Version="2024.7.17.2312" />
		<PackageReference Include="NSL.BuilderExtensions.WebSocketsClient" Version="2024.7.17.2312" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)'=='UnityDebug' or '$(Configuration)'=='Unity'">
		<PackageReference Include="Unity.NSL.BuilderExtensions.SocketCore" Version="2023.4.12.1611" />
		<PackageReference Include="Unity.NSL.BuilderExtensions.WebSocketsClient" Version="2023.4.12.1611" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="NSL.BuilderExtensions.LocalBridge" Version="2024.7.17.2312" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NSL.Node.BridgeServer.Shared\NSL.Node.BridgeServer.Shared.csproj" />
	</ItemGroup>

</Project>
